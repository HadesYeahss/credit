<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="creditos.com.creditohugo.Views.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shadow_header"
        android:elevation="1dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/header_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_credits_empty"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cotizacion_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>
</LinearLayout>
