<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="creditos.com.creditohugo.Views.NewCreditActivity">

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop"
        android:background="@color/colorBackground_form"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:background="@color/colorBackground"
            android:elevation="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edit_text_credit_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/link_water"
                    app:hintTextAppearance="@style/hint_appearance">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_text_credit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="20"
                        android:hint="@string/nombre_credito"
                        android:inputType="textPersonName"
                        android:textColor="@color/link_water"
                        android:textSize="14sp"/>
                </android.support.design.widget.TextInputLayout>

                <!-- <EditText
                     android:id="@+id/edit_text_credit_name"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:ems="20"
                     android:hint="@string/nombre_credito"
                     android:inputType="textPersonName"
                     android:textColor="@color/link_water"
                     android:textColorHint="@color/link_water"
                     android:textSize="16sp"/>-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edit_text_amount_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/link_water"
                    app:hintTextAppearance="@style/hint_appearance">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_text_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="20"
                        android:hint="@string/monto_credito"
                        android:inputType="numberDecimal"
                        android:textColor="@color/link_water"
                        android:textColorHint="@color/link_water"
                        android:textSize="14sp"/>
                </android.support.design.widget.TextInputLayout>


                <!-- <EditText
                     android:id="@+id/edit_text_amount"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:ems="20"
                     android:hint="@string/monto_credito"
                     android:inputType="numberDecimal"
                     android:textColor="@color/link_water"
                     android:textColorHint="@color/link_water"
                     android:textSize="16sp"/>-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edit_text_annual_interest_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/link_water"
                        app:hintTextAppearance="@style/hint_appearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edit_text_annual_interest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:ems="20"
                            android:hint="@string/interes_anual"
                            android:inputType="numberDecimal"
                            android:textColor="@color/link_water"
                            android:textColorHint="@color/link_water"
                            android:textSize="14sp"/>
                    </android.support.design.widget.TextInputLayout>

                    <!--<EditText
                        android:id="@+id/edit_text_annual_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:ems="20"
                        android:hint="@string/interes_anual"
                        android:inputType="numberDecimal"
                        android:textColor="@color/link_water"
                        android:textColorHint="@color/link_water"
                        android:textSize="16sp"/>-->
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spinner_number_of_payments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/link_water"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom">

                <RadioGroup
                    android:id="@+id/tipo_pago"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_button_mensual"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/seleccion_mensual"
                        android:textColor="@color/link_water"
                        android:textSize="14sp"/>

                    <RadioButton
                        android:id="@+id/radio_button_quincenal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/seleccion_quincenal"
                        android:textColor="@color/link_water"
                        android:textSize="14sp"/>

                    <RadioButton
                        android:id="@+id/radio_button_semanal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/seleccion_semanal"
                        android:textColor="@color/link_water"
                        android:textSize="14sp"/>
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text_view_text_annual_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="@string/fecha_de_pago"
                        android:textColor="@color/link_water"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edit_text_date_of_payments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:editable="false"
                        android:ems="20"
                        android:focusable="false"
                        android:inputType="date"
                        android:textColor="@color/link_water"
                        android:textColorHint="@color/link_water"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:background="@drawable/bg_button"
            android:text="@string/boton_calcular"
            android:textStyle="bold"/>
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_new_credit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/alta_prestamo"
            android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/overlapImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-60dp"
        android:adjustViewBounds="true"
        android:elevation="4dp"
        android:src="@mipmap/ic_launcher_round"/>


</RelativeLayout>
